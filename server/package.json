{
  "name": "single-user-dungeon",
  "version": "1.0.0",
  "description": "a text adventure engine &amp; game made with the intention of mimicking the experience of playing a once-popular MUD in present day.",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "both": "concurrently \"npm run dev\" \"cd ../client && npm run dev\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goldyflakes/single-user-dungeon.git"
  },
